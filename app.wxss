page{
    background-color: #f2f2f2;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.weui-cells:before {
    top: 0;
    border-top: 1rpx solid #e5e5e5
}
.weui-cells:after {
    bottom: 0;
    border-bottom: 1rpx solid #e5e5e5
}
.content-list{
border-bottom:1px solid #e5e5e5;
