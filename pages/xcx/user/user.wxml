<view class="home homepage page">
  <view class="icon">
      <view style="width: 84px; height: 84px;border-radius:50%;background-color:#80d497;display: inline-block;">
                    <image src="{{user.head}}" style="width: 80px; height: 80px;border-radius:50%;margin:2px;"></image>
                </view>
        <view class="nickname">{{user.nickname}}</view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <navigator url="../usageLog/usageLog" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../../images/record.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">使用记录</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
            </view>
        </navigator>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <navigator url="../wallet/wallet" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../../images/wallet.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">我的钱包</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
            </view>
        </navigator>
    </view>

 <view class="weui-cells weui-cells_after-title">
        <navigator url="../redbag/redbag" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../../images/redbag.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">我的红包</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
            </view>
        </navigator>
    </view>

  <view class="weui-cells weui-cells_after-title" wx:if="{{toPonderHidden==0}}">
        <navigator url="../ponder/ponder" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../../images/applyTangzhu.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">申请成为荷塘主</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
            </view>
        </navigator>
    </view>
    <view class="weui-cells weui-cells_after-title" wx:if="{{toPonderHidden==1}}">
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../../images/applyTangzhu.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">申请审核中</view>
          </view>
    </view>  
    <view class="weui-cells weui-cells_after-title" wx:if="{{toPonderHidden==2}}">
        <view  class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="toPonder">
            <view class="weui-cell__hd">
                <image src="../../../images/applyTangzhu.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">去往荷塘</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
            </view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="showMoadl1">
          <view class="weui-cell__hd">
              <image src="../../../images/lose.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
          </view>
          <view class="weui-cell__bd">雨伞报失</view>
          <view class="weui-cell__ft weui-cell__ft_in-access">
          </view>
      </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <navigator url="../myservice/myservice" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../../images/connect.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">我的客服</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
            </view>
        </navigator>
    </view>
</view>
