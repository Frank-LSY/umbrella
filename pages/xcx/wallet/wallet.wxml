<view class="homepage">

<modal class="modal"  hidden="{{modalFlag}}" no-cancel confirmText="">  
<view class="modal_view">
    <view style="margin-bottom:30rpx;"><image class="modal_img" src="../../../images/checkmark.png"></image></view>
    <view class="charge1"><text style="font-family: SimHei;font-size:35rpx;color:#000;">余额充值成功</text></view>
    <view style="margin-top:20rpx;font-family: SimHei;font-size:35rpx;color:#000;">余额:￥<text style="font-size:60rpx">{{wallet}}</text>元</view>
    </view>
 <view class="endride" style="height:120rpx;">    
        <button class="warn"  bindtap="endRide" >确定</button>
    </view>

</modal> 

