
<view class="page__bd page__bd_spacing" style="background-color:#fff">
        <view style="margin:0rpx 10rpx 10rpx 50rpx;padding-top:30rpx;">充值金额<text style="color: #f60;margin-left:20rpx;">{{lastMoney}}</text></view>
        <view class="weui-flex" wx:for="{{moneyArr}}">
            <view class="weui-flex__item" wx:for="{{item}}" bindtap="chioceAct"  data-currentid="{{item.id}}">
                <button class="placeholder" wx:if="{{item.isMoney}}" style="text-align:center;font-size:40rpx;color: {{item.style.color}}; background-color: {{item.style.background}};">{{item.content}}
                </button>
            </view>
        </view>
</view>


<view class="introduction">
     <view class="text1">
        <view style="margin-left: auto; text-align: right;"> 点击充值即表示已阅读并同意 </view>
        <navigator url='../depositPact/depositPact' style="margin-right: auto; text-align: left;color: #1c77d5;">《充值协议》</navigator>
     </view>
    <view class="text2" sytle="font-size:13px">押金可以原额退还</view>
</view>
<view depositButton><button class="depositBtn" bindtap="gotoRecharged">充押金  </button></view>


<modal class="modal"  hidden="{{modalFlag}}" no-cancel confirmText="">  
<view class="modal_view">
    <view style="margin-bottom:30rpx;"><image class="modal_img" src="../../../images/checkmark.png"></image></view>
    <view class="charge1"><text style="font-family: SimHei;font-size:35rpx;color:#000;">押金充值成功</text></view>
    <view style="margin-top:20rpx;font-family: SimHei;font-size:35rpx;color:#000;">押金:￥<text style="font-size:60rpx">{{deposit}}</text>元</view>
    </view>
 <view class="endride" style="height:120rpx;">    
        <button class="warn"  bindtap="endRide" >确定</button>
    </view>

</modal> 