@import '../../../style/weui.wxss';
.home{
  padding:0px;
  position:relative;
  font-family: SimHei;
  background-color:#fff;
  font-size:30rpx;
  min-height: 1334rpx;
  /* background-color: #F8F8F8; */
  /*font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;*/
}
.icon{
 color: #FFFFFF;
 width: 100%;
 text-align:center;
 padding-top:40rpx;
}
.user-avatar{
  width: 158rpx;
  height: 158rpx;
  margin-top:80rpx;
  margin-bottom:10rpx;
  /*margin: 80rpx 20rpx;*/
  border-radius: 50%;

}
.nickname{
  margin: 10rpx 20rpx;
  color: #000;
}
.image_left{
float:left;
margin-top:30rpx;
width: 40rpx;
height: 40rpx;
}
.image_right{
  float:right;
  margin-top:30rpx;
  width: 18rpx;
  height: 25rpx;

}


.weui-cell__ft_in-access:after {
content:" ";
display:inline-block;
height:8px;
width:8px;
border-width:1px 1px 0 0;
border-color:#333;
}
.weui-cells{
  padding: 10rpx;
}
.weui-cells:before {
  border-top:1rpx solid #e5e5e5;

}
.weui-cells::after {
bottom:0;
border-bottom:none;

}
.weui-cell{
  padding: 10rpx 20rpx;
}
.weui-cell:before {
  border-top:none;

}
.weui-cell::after {
bottom:0;
border-bottom:none;

}
.weui-cell__bd {
-webkit-box-flex:1;
-webkit-flex:1;
flex:1;
font-size:32rpx;
}
.redbag-header{
  text-align: center;
  margin:20rpx 0 40rpx 0;
}
.redbagNum{
  color: red;
}
.redbagMoney{
  color: red;
  font-size: 80rpx;
}
.redbag-content-title,.redbag-content-title .weui-cell__ft{
color: #000;
}
.redbag-content-detail, .redbag-content-detail .weui-cell__ft{
color: #ccc;
}
.weui-media-box_appmsg{
  background-color: #fff;
}
/*商家信息详情  */
.business-info>.weui-media-box__bd{
  background-color:#fff;
  margin:24rpx;
  font-size:35rpx;
  border-top:1px dashed #999;
  padding-top:30rpx;
}