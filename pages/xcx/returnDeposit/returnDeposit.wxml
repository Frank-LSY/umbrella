<view class="homepage depositView">

<modal class="modal"  hidden="{{modalFlag}}" no-cancel confirmText="">  
<view class="modal_view">
    <view style="margin-bottom:30rpx;"><image class="modal_img" src="../../images/checkmark.png"></image></view>
    <view class="charge1"><text style="font-family: SimHei;font-size:35rpx;color:#000;">申请退款成功</text></view>
    <view class="charge1"><text style="font-family: SimHei;font-size:35rpx;color:#000;">退款将在1-2个工作日内到账</text></view>
    <view bindtap="translation" class="charge1"><text style="font-family: SimHei;font-size:35rpx;color:#000;color:#00a82f;">查看明细</text></view>
</view>
    <view class="endride" style="height:120rpx;">    
        <button class="warn"  bindtap="endRide" >确认</button>
    </view>

</modal>

    <view class="depositBlock">
        <view class="currentMoney">最高可退
          <view style="margin-left: 40rpx; font-size: 34rpx; line-height: 80rpx;color: #FF5809">
          {{maxDeposit}}
          </view>
        </view>
           <view wx:if="{{maxDeposit==0}}"class="varietyMoney" style="height:150rpx"> 
           <text style="font-family: SimHei;font-size:35rpx;color:#00a82f;">    由于您有正在使用的伞未还,这部分押金当你还伞后方可退还！</text>
           </view>
           
        <view wx:else class="varietyMoney" style="height:{{varietyMoneyHight}}">
            <button class="chioce" wx:for="{{moneyArr}}" bindtap="chioceAct" data-currentid="{{item.id}}" style="font-size:40rpx;color: {{item.color}}; background-color: {{item.background}}; top: {{item.top}}; left: {{item.left}}">{{item.content}}</button>
        </view>
    </view>
    <button class="depositBtn" bindtap="gotoReturn">退押金</button>
</view>