<view class="page">
    <form bindsubmit="formSubmit">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input content-list">
                    <view class="weui-cell__hd">
                        <view class="weui-label">报修数量</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" placeholder="请输入需要报修的数量" name="number" />
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">报修原因</view>
                    </view>
                    <view class="weui-cell__bd">
                        <view class="weui-cells">
                            <radio-group bindchange="radioChange">
                                <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="name">
                                    <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
                                    
                              
                                    <view class="weui-cell__bd">{{item.value}}</view>
                                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                                        <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                                    </view>
                                </label>
                            </radio-group>
                        </view>
                    </view>
                </view>
            </view>
        <view class="page__bd_spacing">
            <button class="weui-btn" formType="submit">确认报修</button>
        </view>
    </form>
</view>
