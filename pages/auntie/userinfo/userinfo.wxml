<view class="page">
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell content-list">
            <view class="weui-cell__bd">头像</view>
            <view class="weui-cell__ft">
                <image src="{{head}}" style="width: 80px; height: 80px;border-radius:50%"></image>
            </view>
        </view>
        <view class="weui-cell content-list">
            <view class="weui-cell__bd">姓名</view>
            <view class="weui-cell__ft">{{true_name}}</view>
        </view>
        <view class="weui-cell content-list">
            <view class="weui-cell__bd">性别</view>
            <view class="weui-cell__ft">{{sex}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__bd">年龄</view>
            <view class="weui-cell__ft">{{age}}</view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__bd">身份证号</view>
            <view class="weui-cell__ft">{{id_card}}</view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__bd">工作单位</view>
            <view class="weui-cell__ft">{{organization}}</view>
        </view>
    </view>
</view>
