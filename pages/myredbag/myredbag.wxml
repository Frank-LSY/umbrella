<view class="mycontainer">
  <view class="zan-panel-title">我的红包</view>
  <view class="zan-panel zan-panel--without-border">
    <view class='number'>{{hadredbag}}</view><view style='display:inline'>元</view>
  </view>
  <view class='detail'>您的红包在借伞时会自动使用！</view>
</view>
<zan-toptips
  content="您的{{redbag}}元红包已领取!"
  duration="{{duration}}"
  is-show="{{redbag===0?false:true}}"
/>